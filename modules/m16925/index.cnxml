              </m:msup>
              <m:mo>=</m:mo>
              <m:mi>c</m:mi>
              <m:mi>n</m:mi>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:msub>
                  <m:mi>ν</m:mi>
                  <m:mn>0</m:mn>
                </m:msub>
