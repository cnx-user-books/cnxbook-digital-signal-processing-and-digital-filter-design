        </equation>
        <equation id="uid50">
          <m:math mode="display">
            <m:mrow>
              <m:mi>s</m:mi>
              <m:msup>
                <m:mi>n</m:mi>
                <m:mo>'</m:mo>
              </m:msup>
              <m:mo>=</m:mo>
              <m:mi>s</m:mi>
              <m:mi>n</m:mi>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:msub>
