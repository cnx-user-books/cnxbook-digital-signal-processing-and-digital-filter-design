              <m:mspace width="4pt"/>
              <m:mi>d</m:mi>
              <m:msup>
                <m:mi>n</m:mi>
                <m:mo>'</m:mo>
              </m:msup>
              <m:mo>=</m:mo>
              <m:mi>d</m:mi>
              <m:mi>n</m:mi>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:msub>
                  <m:mi>ν</m:mi>
                  <m:mn>0</m:mn>
                </m:msub>
                <m:mo>,</m:mo>
                <m:msup>
                  <m:mi>k</m:mi>
