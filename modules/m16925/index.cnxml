              <m:mi>d</m:mi>
              <m:mi>n</m:mi>
              <m:mo>(</m:mo>
              <m:mi>K</m:mi>
              <m:mi>i</m:mi>
              <m:mo>/</m:mo>
              <m:mi>N</m:mi>
              <m:mo>,</m:mo>
