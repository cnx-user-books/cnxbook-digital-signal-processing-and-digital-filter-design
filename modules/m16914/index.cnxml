              <m:mtext>for</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mrow>
                <m:mi>n</m:mi>
                <m:mo>≥</m:mo>
                <m:mn>2</m:mn>
              </m:mrow>
            </m:mrow>
          </m:math>
        </equation>
        <para id="id2258672">with initial conditions given by</para>
        <equation id="uid25">
          <m:math mode="display">
