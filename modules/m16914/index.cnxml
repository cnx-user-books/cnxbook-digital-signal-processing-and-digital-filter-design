              <m:mo>=</m:mo>
              <m:mo>-</m:mo>
              <m:msubsup>
                <m:mi>A</m:mi>
                <m:mn>0</m:mn>
                <m:mrow>
                  <m:mo>-</m:mo>
                  <m:mn>1</m:mn>
                </m:mrow>
              </m:msubsup>
              <m:msub>
                <m:mi>A</m:mi>
